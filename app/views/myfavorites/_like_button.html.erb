 <% if current_user.like?(micropost) %>
    <%= form_for(current_user.myfavorites.find_by(like_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :like_id, micropost.id %>
      <%= f.submit 'Dislike', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.myfavorites.build) do |f| %>
      <%= hidden_field_tag :like_id, micropost.id %>
      <%= f.submit 'Like', class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>
  